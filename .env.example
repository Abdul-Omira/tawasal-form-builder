# Syrian Ministry of Communication - Environment Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:5432/database

# Server Configuration
NODE_ENV=production
PORT=5000

# Security Secrets (MUST be changed in production)
SESSION_SECRET=your_secure_session_secret_here
CSRF_SECRET=your_secure_csrf_secret_here
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRES_IN=24h

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/www/ministry-app/uploads

# Security Configuration
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Application Configuration
APP_NAME="Syrian Ministry of Communication"
APP_VERSION=1.0.0
APP_DOMAIN=tawasal.moct.gov.sy

# User Credentials (MUST be changed in production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_NAME=مدير النظام

EMPLOYEE_USERNAME=employee
EMPLOYEE_PASSWORD=your_secure_employee_password
EMPLOYEE_NAME=موظف منصة

# Ministry Email Configuration (REQUIRED)
MINISTRY_SMTP_HOST=mail.moct.gov.sy
MINISTRY_SMTP_PORT=465
MINISTRY_SMTP_USER=tawasal@moct.gov.sy
MINISTRY_SMTP_PASSWORD=your_actual_password_here

# Minister Email for Notifications
MINISTER_EMAIL=minister@moct.gov.sy

# Docker Environment Variables
DB_PASSWORD=your_secure_database_password