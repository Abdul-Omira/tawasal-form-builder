# Database Configuration
DATABASE_URL=postgresql://ministry_user:secure_password_123!@localhost:5432/ministry_communication

# Server Configuration
NODE_ENV=production
PORT=5000

# Session Security (Generate new secret for production)
SESSION_SECRET=your_secure_session_secret_here

# CSRF Protection
CSRF_SECRET=your_secure_csrf_secret_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/www/ministry-app/uploads

# Security Configuration
BCRYPT_ROUNDS=12
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Application Configuration
APP_NAME="Syrian Ministry of Communication"
APP_VERSION=1.0.0
APP_DOMAIN=your-domain.com